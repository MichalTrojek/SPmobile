<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/eanTextView"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:textAlignment="viewStart"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="124124123123123" />

    <TextView
        android:id="@+id/amountTextView"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:textAlignment="textStart"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/eanTextView"
        app:layout_constraintTop_toTopOf="@+id/eanTextView"
        tools:text="122" />

    <TextView
        android:id="@+id/nameTexView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLength="30"
        android:maxLines="1"
        android:textAlignment="viewStart"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/eanTextView"
        app:layout_constraintTop_toBottomOf="@+id/eanTextView" />

    <TextView
        android:id="@+id/priceTextView"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        app:layout_constraintStart_toStartOf="@+id/amountTextView"
        app:layout_constraintTop_toBottomOf="@+id/amountTextView" />


</android.support.constraint.ConstraintLayout>